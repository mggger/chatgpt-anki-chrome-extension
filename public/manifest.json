{
  "manifest_version": 3,
  "name": "Anki card creator",
  "version": "1.0",
  "description": "Create Anki cards from selected text",
  "permissions": ["tabs", "contextMenus", "storage", "notifications", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "unload.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "anki extractor",
    "default_icon": {
      "16": "unload.png",
      "32": "unload.png",
      "48": "unload.png",
      "128": "unload.png"
    }
  }
}